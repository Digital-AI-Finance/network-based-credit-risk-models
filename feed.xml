---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <description>{{ site.description | xml_escape }}</description>
    <link>{{ site.url }}{{ site.baseurl }}/</link>
    <atom:link href="{{ site.url }}{{ site.baseurl }}/feed.xml" rel="self" type="application/rss+xml"/>
    <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <generator>Jekyll v{{ jekyll.version }}</generator>
    {% for item in site.data.news limit:10 %}
    <item>
      <title>{{ item.title | xml_escape }}</title>
      <description>{{ item.description | xml_escape }}</description>
      <pubDate>{{ item.date | date_to_rfc822 }}</pubDate>
      <link>{{ site.url }}{{ site.baseurl }}/#news</link>
      <guid isPermaLink="false">{{ site.url }}{{ site.baseurl }}/news/{{ item.date | slugify }}</guid>
    </item>
    {% endfor %}
    {% for pub in site.data.publications limit:10 %}
    <item>
      <title>{{ pub.title | xml_escape }}</title>
      <description>{{ pub.authors | xml_escape }} ({{ pub.year }}) - {{ pub.journal | xml_escape }}</description>
      <pubDate>{{ pub.year }}-01-01T00:00:00+00:00</pubDate>
      <link>https://doi.org/{{ pub.doi }}</link>
      <guid isPermaLink="false">{{ pub.openalex_id | default: pub.doi }}</guid>
    </item>
    {% endfor %}
  </channel>
</rss>
